<UserControl x:Class="Elements.TextSelection"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
	<StackPanel Margin="5">
		<TextBox  Name="txt" 
             SelectionChanged="txt_SelectionChanged"  
             Text="Select a word to test the SelectionChanged event."></TextBox>
		<TextBlock Margin="0,10,0,0">Current selection: </TextBlock>
		<TextBlock  Name="txtSelection" TextWrapping="Wrap"></TextBlock>
	</StackPanel>
</UserControl>
