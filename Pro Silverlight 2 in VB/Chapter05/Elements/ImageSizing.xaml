<UserControl x:Class="Elements.ImageSizing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
   >
   <Grid Margin="5" Background="White">
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>

		<Image Margin="5" Source="happyface.jpg" Grid.Column="3" Stretch="None"></Image>
		<Image Margin="5" Source="happyface.jpg" Stretch="Fill"></Image>
		<Image Margin="5" Source="happyface.jpg" Grid.Column="1" Stretch="Uniform"></Image>
		<Image Margin="5" Source="happyface.jpg" Grid.Column="2" Stretch="UniformToFill"></Image>

		<TextBlock Grid.Row="1" TextAlignment="Center">Fill</TextBlock>
		<TextBlock Grid.Row="1" Grid.Column="1" TextAlignment="Center">Uniform</TextBlock>
		<TextBlock Grid.Row="1" Grid.Column="2" TextAlignment="Center">UniformToFill</TextBlock>
		<TextBlock Grid.Row="1" Grid.Column="3" TextAlignment="Center">None</TextBlock>
	</Grid>
</UserControl>
