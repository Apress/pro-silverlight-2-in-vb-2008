<UserControl x:Class="Elements.ToolTipTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
	<StackPanel Margin="15">
	<Image Source="happyface.jpg" Visibility="Collapsed"></Image>
		<Button Content="I have a fancy tooltip" Padding="10">
			<ToolTipService.ToolTip>
				<ToolTip Background="DarkRed" Foreground="White">
					<StackPanel>
					<TextBlock Margin="3" Text="Image and text"></TextBlock>
					<Image Source="happyface.jpg"></Image>
					<TextBlock Margin="3" Text="Image and text"></TextBlock>
				</StackPanel>
				</ToolTip>
			</ToolTipService.ToolTip>
		</Button>

	</StackPanel>
</UserControl>
