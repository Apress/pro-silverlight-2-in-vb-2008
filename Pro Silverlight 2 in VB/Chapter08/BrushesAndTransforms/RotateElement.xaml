<UserControl x:Class="BrushesAndTransforms.RotateElement"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="200" Height="300">
	<StackPanel Background="LightYellow">	    
		<StackPanel Margin="25" >
				<Button Padding="5" HorizontalAlignment="Left" Content="I'm not rotated"></Button>
		    <Button Padding="5" HorizontalAlignment="Left" Content="I'm not rotated"></Button>
			<Button Padding="5" HorizontalAlignment="Left" Content="I'm rotated" HorizontalContentAlignment="Left">
				<Button.RenderTransform>
					<RotateTransform Angle="35" CenterX="45" CenterY="5" />
				</Button.RenderTransform>				
			</Button>
			<Button Padding="5" HorizontalAlignment="Left" Content="I'm not rotated"></Button>
		</StackPanel>
		
	</StackPanel>
</UserControl>
