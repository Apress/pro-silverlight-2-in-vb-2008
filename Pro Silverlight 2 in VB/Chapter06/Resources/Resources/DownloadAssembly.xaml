<UserControl x:Class="Resources.DownloadAssembly"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <StackPanel x:Name="LayoutRoot" Background="White">
<Button x:Name="cmdDownload" Content="Download Assembly" Click="cmdDownload_Click" Padding="5" Margin="5">
		</Button>
		<Button x:Name="cmdUseAssembly" Content="Use Assembly (only succeeds if the assembly has been downloaded)"
		Padding="5" Margin="5" Click="cmdUseAssembly_Click"></Button>
		<TextBlock x:Name="txt" TextWrapping="Wrap" Padding="5" Margin="5"></TextBlock>
    </StackPanel>
</UserControl>
