<UserControl x:Class="Resources.DownloadResource"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
	<StackPanel x:Name="LayoutRoot" Background="White">
		<Button x:Name="cmdDownload" Content="Download XML Resource" Click="cmdDownload_Click" Padding="5" Margin="5">
		</Button>
		<Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="White">
			<Grid.RowDefinitions>
				<RowDefinition Height="50"></RowDefinition>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300"></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<ProgressBar x:Name="progressBar"></ProgressBar>
			<TextBlock x:Name="lblProgress" HorizontalAlignment="Center" VerticalAlignment="Center">0% downloaded.</TextBlock>

		</Grid>
		<TextBlock x:Name="txt" Margin="5" Padding="5"></TextBlock>
	</StackPanel>
</UserControl>
