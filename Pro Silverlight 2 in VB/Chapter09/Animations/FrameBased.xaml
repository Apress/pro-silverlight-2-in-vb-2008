<UserControl x:Class="Animations.FrameBased"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
	<Grid Margin="3">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal">
			<Button Margin="3" Padding="3" Click="cmdStart_Clicked" Content="Start"></Button>
			<Button Margin="3" Padding="3" Click="cmdStop_Clicked" Content="Stop"></Button>
		</StackPanel>
		<Canvas x:Name="canvas" Grid.Row="1" Margin="3"></Canvas>
	</Grid>
</UserControl>
